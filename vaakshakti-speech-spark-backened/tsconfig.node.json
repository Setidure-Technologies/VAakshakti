{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM"], // Added "DOM" for URL constructor
    "module": "ESNext",
    "skipLibCheck": true,
    "types": ["vite/client", "node"], // Added vite/client and node types

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts"]
}
